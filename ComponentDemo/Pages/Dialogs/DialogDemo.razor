@page "/Dialogs/Base"
@using BlazorComponents

<h4>Dialog Demo</h4>

<div>
	<button class="btn btn-green" @onclick="()=>ShowingDialog=true">Show Dialog</button>
	<button class="btn btn-yellow" @onclick="()=>ShowingDraggableDialog=true">Show Draggable Dialog</button>
	<button class="btn btn-blue" @onclick="()=>ShowingDraggableNonTitleDialog=true">Show Draggable Non-Title Dialog</button>
</div>

<Dialog ShowDialog="ShowingDialog" DialogTitle="Test Title">
    <div class="dialogBody">
        <h3>This is a Dialog</h3>
        <div>
            This is a block of input
        </div>
    </div>
	<div class="dialogButtons">
		<button class="btn btn-blue" @onclick="() => ShowingDialog = false">Primary</button>
		<button class="btn btn-yellow" @onclick="() => ShowingDialog = false">Secondary</button>
		<button class="btn btn-red" @onclick="() => ShowingDialog = false">Danger</button>
	</div>
</Dialog>

<Dialog ShowDialog="ShowingDraggableDialog" DialogTitle="Test Title" IsDraggable="true">
    <div class="dialogBody">
        <h3>This is a Draggable Dialog</h3>
        <div>
            This is a block of input
        </div>
    </div>
	<div class="dialogButtons">
		<button class="btn btn-blue" @onclick="() => ShowingDraggableDialog = false">Primary</button>
		<button class="btn btn-yellow" @onclick="() => ShowingDraggableDialog = false">Secondary</button>
		<button class="btn btn-red" @onclick="() => ShowingDraggableDialog = false">Danger</button>
	</div>
</Dialog>

<Dialog ShowDialog="ShowingDraggableNonTitleDialog" IsDraggable="true" AdditionalClass="wide">
	<div class="dialogBody">
		<h3>This is a non-titled Draggable Dialog</h3>
		<div>
			This is a block of input
		</div>
	</div>
	<div class="dialogButtons">
		<button class="btn btn-blue" @onclick="() => ShowingDraggableNonTitleDialog = false">Primary</button>
		<button class="btn btn-yellow" @onclick="() => ShowingDraggableNonTitleDialog = false">Secondary</button>
		<button class="btn btn-red" @onclick="() => ShowingDraggableNonTitleDialog = false">Danger</button>
	</div>
</Dialog>


@code {
    public bool ShowingDialog { get; set; }
    public bool ShowingDraggableDialog { get; set; }
    public bool ShowingDraggableNonTitleDialog { get; set; }
}