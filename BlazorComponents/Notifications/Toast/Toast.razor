@namespace BlazorComponents

<div class="toast show">
	<div class="toast-header">
		<svg class="bd-placeholder-img rounded mr-2 @GetFillColour()" width="20" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%"></rect></svg>
		<strong class="mr-auto">@Model.Title</strong>
		<small class="text-muted">@GetTimeString()</small>
		<button type="button" class="ml-2 mb-1 close" @onclick="@Close">
			<span>&times;</span>
		</button>
	</div>
	<div class="toast-body">
		@Model.Body
	</div>
</div>