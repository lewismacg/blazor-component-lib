@namespace BlazorComponents
@typeparam TModel where TModel : class

<div class="column-category">
	<div class="alert alert-@_alertClass mb-0 text-center rounded-0">
		<b>
			@CategoryName
			@HeaderContent
			@if (ShowCount)
			{
				@:(@_models.Count)
			}
		</b>
	</div>
	@if (BodyContent != null) {
		<div class="body-content" style="height: @(BodyContentHeight)px">
			@BodyContent
		</div>
	}
	<div class="drop-column">
		<ul class="dropzone @_dropClass"
			ondragover="event.preventDefault();event.dataTransfer.dropEffect='link'"
			ondragstart="event.dataTransfer.setData('', event.target.id);"
			@ondrop="HandleDrop"
			@ondragenter="HandleDragEnter"
			@ondragleave="HandleDragLeave">

			@foreach (var model in _models)
			{
				<DragBox TModel="TModel" Model="model" />
			}
		</ul>
	</div>
</div>